@model ICollection<Koombu.Bll.ViewModel.UsersListVm>
@{
	ViewData["Title"] = "Create Group";
}


<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div class="groups">
				<h1 class="page-header" align="center">Create group</h1>
				<div class="group-item">
					@using (Html.BeginForm("MakeGroup", "Group", FormMethod.Post, new { enctype = "multipart/form-data" }))
					{
						<label>Group Name</label><br />
						<input type="text" name="groupName" required="true" /><br /><br />
						<label>Group Description</label><br />
						<textarea class="form-control" placeholder="Group description" name="groupDescription" required="true"></textarea><br /><br />
						<label>Group Picture</label><br />
						<input type="file" name="groupPicture" /><br /><br />
						<br />
						<button type="submit" class="btn btn-default">Create group</button>
					}
				</div>
				<div class="clearfix"></div>

			</div>
		</div>
		<div class="col-md-4">
			<div class="panel panel-default friends">
				<div class="panel-heading">
					<h3 class="panel-title">Followed users</h3>
				</div>
				<div class="panel-body">
					<ul>
						@foreach (var user in Model.Take(9))
	{
					<li>
						<a href='@Url.Action("Profil", "User", new {id = @user.UserId})' class="thumbnail">

							@if (user.ProfilPicture != null)
		{
					<img src="@Url.Content(user.ProfilPicture)" alt="@user.FirstName @user.LastName">
}
else
{
					<img src="~/Content/images/user.png" alt="">
}
							<center>@user.LastName</center>
						</a>
					</li>


}
					</ul>
					<div class="clearfix"></div>
					<a class="btn btn-primary" href='@Url.Action("FollowedUsers", "Home")'>View All</a>
				</div>
			</div>
			
		</div>
	</div>
</div>
</section>



