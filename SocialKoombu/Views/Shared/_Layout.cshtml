<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Koombu Social Network</title>

		<link rel="stylesheet" href="~/Content/bootstrap.css" />
		<link rel="stylesheet" href="~/Content/style.css" />

		
	
</head>
<body>

	<header>
		<div class="container">
			<a href="@Url.Action("Home", "Home")"><img src="~/Content/images/logo.png" class="logo" alt=""></a>
			<div style="float: right">
				
					<h3>@Session["UserName"]</h3>
				
			</div>
		</div>
	</header>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li><a href="@Url.Action("Home", "Home")">Home</a></li>
					<li><a href="@Url.Action("Users", "User")">Users</a></li>
					<li><a href="@Url.Action("Groups", "Group")">My Groups</a></li>
					<li><a href="@Url.Action("MyProfil", "User")">Profile</a></li>
					<li><a href="@Url.Action("LogOut", "Home")">Log Out</a></li>
				</ul>
			</div>
		</div>
	</nav>

	

			@RenderBody()



			
				<footer>
					<div class="container">
						<p>Koombu Copyright &copy; 2018</p>
					</div>
				</footer>
			</div>

			

			@RenderSection("Scripts", required: false)
</body>
</html>
