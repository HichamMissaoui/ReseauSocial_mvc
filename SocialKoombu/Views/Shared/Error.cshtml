
@{
	Layout = "";
}

@{
	ViewBag.Title = "";
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Koombu Social Network</title>
	<link href="~/Content/bootstrap.css" rel="stylesheet">
	<link href="~/Content/style.css" rel="stylesheet">
</head>
<body>
	<header>
		<div class="container">
			<img src="~/Content/images/logo.png" class="logo" alt="">
			<span class="form-inline">

				@using (Html.BeginForm("SignIn", "Home"))
				{
					<label class="sr-only">Email address</label>
					<input type="email" class="form-control" name="email" placeholder="Enter email" required>

					<label class="sr-only">Password</label>
					<input type="password" class="form-control" name="password" placeholder="Password" required>




					<button type="submit" class="btn btn-default">Sign in</button><br>
					if (ViewData["SignError"] != null)
					{<lable style="color: red">Bad email or password,try again !</lable><br />}
				}

			</span>

		</div>
	</header>
	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<div id="navbar" class="collapse navbar-collapse">

			</div>
		</div>
	</nav>
	<section>
		<div class="container">
			<hgroup>
				<h1>Error !</h1>
				<h2>You are not authorised to view this resource</h2>
			</hgroup>
		</div>
	</section>
	<footer>
		<div class="container">
			<p>Koombu Copyright &copy, 2018</p>
		</div>
	</footer>

</body>
</html>


