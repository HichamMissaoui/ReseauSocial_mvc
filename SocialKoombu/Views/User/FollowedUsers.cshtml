@model ICollection<Koombu.Bll.ViewModel.UsersListVm>
@{
	ViewData["Title"] = "Followed Users";
}




<section>
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="members">
					<h1 class="page-header" align="center">All Followed Users</h1>
					@if (Model != null)
					{
						foreach (var user in Model)
						{
							<div class="row member-row">
								<div class="col-md-3">
									<a href='@Url.Action("Profil", "User",new { id=@user.UserId})'>
										@if (user.ProfilPicture != null)
										{
											<img src="@Url.Content(user.ProfilPicture)" class="img-thumbnail">
										}
										else
										{
											<img src="~/Content/images/user.png" class="img-thumbnail">
										}
									</a>
									<div class="text-center">
										@user.FirstName  @user.LastName
									</div>
								</div>
								<div class="col-md-1">
									<p><a href="#"><i></i></a></p>
								</div>

								<div class="col-md-1">
									<p><a href="#"><i></i></a></p>
								</div>
								<div class="col-md-3">
									<p><a href='@Url.Action("Profil", "User",new { id=@user.UserId})' class="btn btn-primary btn-block"><i class="fa fa-edit"></i> View Profile</a></p>
								</div>
								<div class="col-md-1">
									<p><a href="#"><i></i></a></p>
								</div>

							</div>
						}
					}
					

				</div>
			</div>
			<div class="col-md-4">
				<div class="panel panel-default groups">
					<div class="panel-heading">
						<h3 class="panel-title">Search for a User</h3>
					</div>
					<div class="panel-body">
						<div class="group-item">
							@using (Html.BeginForm("SearchUser", "User", FormMethod.Post))
							{

								<input type="search" name="userName" style="padding-right: 10px" />


								<input type="submit" value="Search" />



							}
						</div>
					</div>

				</div>

			</div>
		</div>
	</div>
</section>



